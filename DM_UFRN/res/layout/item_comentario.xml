<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5sp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id"
            style="@style/padrao"
            android:layout_weight="0.62"
            android:gravity="left"
            android:height="24sp"
            android:text="@string/id"
            android:textColor="#000000" />

        <TextView
            style="@style/padrao"
            android:gravity="left"
            android:height="24sp"
            android:text="    "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/lugar"
            style="@style/padrao"
            android:layout_weight="0.62"
            android:gravity="left"
            android:height="24sp"
            android:text="@string/lugar"
            android:textColor="#000000" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        style="@style/padrao"
        android:layout_width="299dp"
        android:layout_weight="1.87"
        android:height="24sp"
        android:text="@string/description"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_apagar_c"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:contentDescription="@string/imagem_apagar"
            android:onClick="deletar"
            android:src="@drawable/remove" />

        <ImageView
            android:id="@+id/button_editar_c"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:contentDescription="@string/imagem_editar"
            android:src="@drawable/edit" />
    </LinearLayout>

</LinearLayout>