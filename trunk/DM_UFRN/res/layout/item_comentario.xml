<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5sp" >


        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:height="20sp"
            android:text="@string/id"
            android:textColor="#000000"
            android:typeface="monospace" />


            <TextView
                android:id="@+id/lugar"
                android:layout_width="79dp"
                android:layout_height="14dp"
                android:gravity="left"
                android:height="24sp"
                android:text="@string/lugar"
                android:textColor="#000000" />

        <TextView
            android:id="@+id/categoryId"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:height="24sp"
            android:text="@string/comentario"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:height="24sp"
            android:text="@string/description"
            android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_apagar_c"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:contentDescription="@string/imagem_apagar"
            android:onClick="deletar"
            android:src="@drawable/remove" />

        <ImageView
            android:id="@+id/button_editar_c"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:contentDescription="@string/imagem_editar"
            android:src="@drawable/edit" />
    </LinearLayout>

</LinearLayout>