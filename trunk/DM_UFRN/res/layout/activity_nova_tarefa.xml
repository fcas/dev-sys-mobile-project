<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NovaTarefa" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/tarefa_nova"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="40sp" />

     <DatePicker android:id="@+id/datePicker1" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content">
      </DatePicker>
     
     
     <Button
         android:id="@+id/button_tarefa_nova"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/tarefa_descricao"
         android:layout_marginBottom="31dp"
         android:text="@string/tarefa_ok" />

     <EditText
         android:id="@+id/tarefa_local"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/tarefa_descricao"
         android:layout_alignLeft="@+id/timePicker1"
         android:layout_marginBottom="14dp"
         android:ems="10"
         android:hint="@string/tarefa_local" />

     <EditText
         android:id="@+id/tarefa_descricao"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/button_tarefa_nova"
         android:layout_alignLeft="@+id/tarefa_local"
         android:layout_marginBottom="18dp"
         android:ems="10"
         android:hint="@string/tarefa_descricao"
         android:imeActionLabel="@string/tarefa_nova"
         android:inputType="text" />

     <TimePicker
         android:id="@+id/tarefa_horario"
         android:layout_width="250dp"
         android:layout_height="100dp"
         android:layout_above="@+id/tarefa_local"
         android:layout_alignLeft="@+id/textView1"
         android:layout_marginBottom="21dp" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/tarefa_horario"
         android:layout_alignLeft="@+id/tarefa_horario"
         android:layout_marginBottom="18dp"
         android:text="@string/tarefa_hora"
         android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
